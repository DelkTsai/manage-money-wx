<!--pages/count/count.wxml-->
<view class="top-bgimage">
  <view class="container">
    <view class="userinfo">
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </view>
  </view>
</view>

<view class="main-body">
    <view class="option" bindtap="bindOptionTap" >
        <text bingtap="bindOptionTapAll" id="1" class="{{optionColorId == 1 ? 'option-color-highlight' : 'option-color'}}">全部</text>
        <text class="blank-char"> | </text>
        <text bingtap="bindOptionTapWeek" id="2" class="{{optionColorId == 2 ? 'option-color-highlight' : 'option-color'}}">周消费</text>
        <text class="blank-char"> | </text>
        <text bingtap="bindOptionTapToday" id="3" class="{{optionColorId == 3 ? 'option-color-highlight' : 'option-color'}}">当日明细</text>
    </view>

    <!--按时间分类-->
     <view class="hs20"></view>
    <view>
        <view class="list-title-left">消费时间</view>
        <view class="list-title-right">消费总金额</view>
        <view class="clear"></view>
    </view>

    <view wx:key="{{listAll}}" wx:for="{{listAll}}" bindtap="bindAll" data-id="{{item.DateTime}}">
        <view class="list-content-left">{{item.date}}</view>
        <view class="list-content-right">{{item.changed}}</view>
        <view class="clear"></view>
    </view> 

    <!--按支出分类-->
    <view class="hs20"></view>
    <view>
        <view class="list-title-left">支出分类</view>
        <view class="list-title-right">支出金额</view>
        <view class="clear"></view>
    </view>

    <view wx:key="{{listAll}}" wx:for="{{listAll}}" bindtap="bindAll" data-id="{{item.DateTime}}">
        <view class="list-content-left">{{item.style}}</view>
        <view class="list-content-right">{{item.changed}}</view>
        <view class="clear"></view>
    </view>

    <!--按收入分类-->
    <view class="hs20"></view>
    <view>
        <view class="list-title-left">支出标题</view>
        <view class="list-title-right">支出细节</view>
        <view class="clear"></view>
    </view>

    <view wx:key="{{listAll}}" wx:for="{{listAll}}" bindtap="bindAll" data-id="{{item.DateTime}}">
        <view class="list-content-left">{{item.title}}</view>
        <view class="list-content-right">{{item.detail}}</view>
        <view class="clear"></view>
    </view>
    <view class="hs20"></view>
</view>